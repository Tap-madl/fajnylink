<!DOCTYPE html>
<html>
<head>
  <title>Fajnylink</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="ramka"><div id="nazwa">Fajny Link</div></div>
<div id="ramka2">
  <div id="nav">
    <p> 
      <a><%= link_to "Strona Glowna", links_path %></a> *
      <a><%= link_to "Kategorie", categories_path %></a> *
      <a href="">Top</a> 
    </p>
  </div>

  <div id="info">
  Witaj na stronie! <script src="http://szabloniki.com/skrypty/pobierz.php?id=dzis" type=""></script> <script src="http://szabloniki.com/skrypty/pobierz.php?id=imieniny" type=""></script>
    </div>
</div>			
<div id="wrapper">	
  <div id="l_menu">		
    <% if user_signed_in? %>  
     Zalogowany jako: <br/><%= current_user.email %>.<br/>
     Nie Ty?  <br/>
     <center><%= link_to "Wyloguj", destroy_user_session_path %></center><br/>
     <center><%= gravatar_image_tag(current_user.email) %></center><br/><br/>
     <p id="dodaj_moje_linki"><%= link_to "Dodaj FajnyLink", new_link_path %></p>
     <p id="dodaj_moje_linki"><%= link_to "Moje linki", current_user %></p>
     <% else %>  
     <%= link_to "Rejestracja", new_user_registration_path %> albo  
     <%= link_to "Zaloguj", new_user_session_path %>  
    <% end %> 		
    <br/><br/>	
    <%= form_tag categorys_links_path, :method => 'get' do %>
    <%= hidden_field_tag :name, :sport %>  
   <%= image_submit_tag "rails.png", :name =>nil %>
    <% end %>
    

      <%= form_tag links_path, :method => 'get', :id => "links_search" do %> 
      <p>
	<%= hidden_field_tag :direction, params[:direction] %>
	<%= hidden_field_tag :sort, params[:sort] %>
	<%= text_field_tag :search, params[:search], :size => 10 %>
	<%= submit_tag "Szukanie", :title => nil %>
      </p>  
      <% end %>

     
     
     

    
   </div>
  <div id="content">

    <div id="user_nav">  	
    </div>
    <%= yield %>
  </div>
</div>

